<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/google_red" />
            <corners android:radius="@dimen/_1000dp"/>
        </shape>
    </item>
    <item
        android:left="1px"
        android:top="1px"
        android:right="1px"
        android:bottom="1px">
        <shape>
            <solid android:color="@color/google_red"/>
            <corners android:radius="@dimen/_1000dp"/>
            <padding
                android:left="@dimen/_10dp"
                android:top ="@dimen/_5dp"
                android:right="@dimen/_10dp"
                android:bottom="@dimen/_5dp" />
        </shape>
    </item>



</layer-list>