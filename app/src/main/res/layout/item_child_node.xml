<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10dp">

        <TextView
            android:id="@+id/item_material"
            style="@style/cssTextSizeColor"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.25"
            android:gravity="center"
            android:paddingEnd="@dimen/_10dp"
            android:text="2021.01.26" />

        <TextView
            android:id="@+id/item_size"
            style="@style/cssTextSizeColor"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.25"
            android:gravity="center"
            android:text="109x16x30" />

        <TextView
            android:id="@+id/item_texture"
            style="@style/cssTextSizeColor"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.25"
            android:text="纯PEI琥珀色" />

        <TextView
            android:id="@+id/item_unit"
            style="@style/cssTextSizeColor"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.25"
            android:text="1" />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/re_price_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_22dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_toStartOf="@+id/ll_price_rate" />

        <LinearLayout
            android:id="@+id/ll_price_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/WrapWrap"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:text="单价:"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/item_price"
                    style="@style/WrapWrap"
                    android:text="6.5"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

            <LinearLayout
                style="@style/WrapWrap"
                android:layout_marginStart="@dimen/_25dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:text="税率:"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/item_tax_rate"
                    style="@style/WrapWrap"
                    android:text="13%"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22dp"
            android:gravity="center"
            android:text="备注："
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/item_note"
            style="@style/cssTextSizeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="后处理要求:纯PEI琥珀色；后处理要求:纯PEI琥珀色；"
            android:textColor="@color/orange" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/grey_e" />

</LinearLayout>










