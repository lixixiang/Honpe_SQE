<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_10dp"
    android:paddingBottom="@dimen/_10dp"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_1dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_order_icon"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/selector_men"/>

                <TextView
                    android:id="@+id/tv_orderNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_royal"
                    android:layout_gravity="center_horizontal"
                    android:text="10B001"/>

                <Button
                    android:id="@+id/btn_calculate_quotation"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25dp"
                    android:background="@drawable/selector_btn_green_grey"
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="计算报价" />
            </LinearLayout>

        </FrameLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="@dimen/_1dp"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"/>

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_texture_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纯PEI 琥珀色 | 70 PCS"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="要求交期：2020-08-17 10:10"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格：109X16X0"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后处理要求："
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阻燃94V0,高绝缘，绝缘阻燃烤漆，颜色参考色彩计划"
                android:textColor="@color/google_red"/>

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sp"
                android:textColor="@color/grey_home"
                android:text="备注"/>
        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/css_count_window_up_layout"/>


</LinearLayout>