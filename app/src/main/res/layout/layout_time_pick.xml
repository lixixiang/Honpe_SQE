<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_pickerview_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44dp"
        android:background="@color/background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/_10dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:background="@color/white"
            android:text="开始时间"/>

        <TextView
            android:layout_width="@dimen/_1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/_10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:text="结束时间"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_1dp">

        <com.shenzhen.honpe.wheelview.view.WheelView
            android:id="@+id/test_wheel_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:background="@color/white" />

        <com.shenzhen.honpe.wheelview.view.WheelView
            android:id="@+id/test_wheel_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white" />

        <com.shenzhen.honpe.wheelview.view.WheelView
            android:id="@+id/test_wheel_day"
            android:layout_width="0dp"
            android:layout_height="@dimen/_120dp"
            android:layout_weight="1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_and"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="至"
            android:textColor="@color/blue_dark"
            android:textSize="25sp" />

        <com.shenzhen.honpe.wheelview.view.WheelView
            android:id="@+id/test_wheel_year2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1.2" />

        <com.shenzhen.honpe.wheelview.view.WheelView
            android:id="@+id/test_wheel_month2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1" />

        <com.shenzhen.honpe.wheelview.view.WheelView
            android:id="@+id/test_wheel_day2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>