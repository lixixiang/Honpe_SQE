<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/_10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="单号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

                <RelativeLayout
                    android:layout_width="@dimen/_120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_frame_grey"
                    android:padding="@dimen/_10dp">

                    <TextView
                        android:id="@+id/tv_pop_order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:layout_toStartOf="@+id/iv_right"
                        android:hint="请选择"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sp" />

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="@dimen/_15dp"
                        android:layout_height="@dimen/_15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/right" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20dp"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="中标状态"/>

                <RelativeLayout
                    android:layout_width="@dimen/_120dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10dp"
                    android:background="@drawable/shape_frame_grey">
                    <TextView
                        android:id="@+id/tv_pop_order_status"
                        android:layout_toStartOf="@+id/iv_right_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sp"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:hint="请选择"/>

                    <ImageView
                        android:id="@+id/iv_right_2"
                        android:layout_width="@dimen/_15dp"
                        android:layout_height="@dimen/_15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/right"/>

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_10dp"
                android:text="日期"/>

            <RelativeLayout
                android:id="@+id/re_pop_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_frame_grey"
                android:padding="@dimen/_10dp">
                <TextView
                    android:id="@+id/tv_pop_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:hint="开始时间"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="至"
                    android:textStyle="bold"
                    android:textColor="@color/google_red"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/tv_pop_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:hint="结束时间"/>

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_pop_sure"
            android:layout_width="@dimen/_90dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_gravity="center_horizontal"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@drawable/selector_btn_red_grey"/>

    </LinearLayout>

   <View
       android:id="@+id/v_background"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/alpha_black"/>



</LinearLayout>